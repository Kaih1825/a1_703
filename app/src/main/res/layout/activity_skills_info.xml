<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SkillsInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:rotation="270"
                android:id="@+id/back"
                android:textSize="30dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/blue"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="職類介紹"
                    android:layout_gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <Space
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:id="@+id/chipGroup"
            app:selectionRequired="true"
            app:singleSelection="true"
            app:checkedChip="@+id/s1"
            app:chipSpacingVertical="-10dp"
            android:layout_gravity="center">
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:chipCornerRadius="5dp"
                android:id="@+id/s1"
                android:checkable="true"
                android:textAlignment="center"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:text="全部"/>
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:checkable="true"
                app:chipCornerRadius="5dp"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:id="@+id/s2"
                android:textAlignment="center"
                android:text="製造工程技術"/>
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:checkable="true"
                app:chipCornerRadius="5dp"
                android:id="@+id/s3"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:textAlignment="center"
                android:text="營建技術"/>
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:checkable="true"
                app:chipCornerRadius="5dp"
                android:id="@+id/s4"
                android:textAlignment="center"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:textSize="12dp"
                android:text="資訊與通訊技術"/>
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:checkable="true"
                app:chipCornerRadius="5dp"
                android:id="@+id/s5"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:textAlignment="center"
                android:text="運輸與物流"/>
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:checkable="true"
                android:id="@+id/s6"
                app:chipCornerRadius="5dp"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:textAlignment="center"
                android:textSize="12dp"
                android:text="社會與個人服務"/>
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:checkable="true"
                app:chipCornerRadius="5dp"
                android:id="@+id/s7"
                android:textAlignment="center"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:text="藝術與時尚"/>
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:checkable="true"
                android:id="@+id/s8"
                app:chipCornerRadius="5dp"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:textAlignment="center"
                android:text="青少年組"/>
            <com.google.android.material.chip.Chip
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:chipCornerRadius="5dp"
                android:checkable="true"
                android:id="@+id/s9"
                android:backgroundTint="@color/chip_color"
                android:textColor="@color/chip_txt_color"
                android:textAlignment="center"
                android:text="未來職類"/>
        </com.google.android.material.chip.ChipGroup>

        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:columnWidth="300dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/bac"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:id="@+id/dialog"
        android:visibility="gone"
        android:scaleX="0"
        android:clickable="true"
        android:scaleY="0"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="^"
                android:id="@+id/pre"
                android:layout_gravity="center"
                android:rotation="270"
                android:layout_marginLeft="10dp"/>
            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="X"
                        android:id="@+id/closeDialog"
                        android:layout_gravity="right"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dialogTitle"
                        android:text="01工業機械"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:id="@+id/dialogImg"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogTxt"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text=">"
                android:id="@+id/nxt"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>